<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.ReceiptActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/padding_20"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivToHome"
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"
                android:src="@drawable/ic_back"
                android:background="@drawable/background_icon"
                />


        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rlExplore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/marginTop_20"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textsize_25"
                android:fontFamily="@font/roboto_regular"
                android:gravity="center"
                android:text="@string/receipt"
                android:textColor="@android:color/black"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:gravity="center"
                android:layout_marginTop="@dimen/marginTop_10"
                android:background="@drawable/background_orange"
                android:paddingLeft="@dimen/paddingLeft_10"
                android:paddingRight="@dimen/paddingLeft_10"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/robotoslab_bold"
                    android:text="@string/_4_new_new"
                    android:textColor="@android:color/white" />

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_fl_color_register"
        android:elevation="1.0dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="@dimen/marginTop_30"
            android:padding="@dimen/padding_15"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/tvExplore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/textsize_25"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="center"
                    android:text="@string/top_orders"
                    android:textColor="@android:color/white"
                    />
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/textsize_25"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="center"
                    android:text="@string/_2740_11"
                    android:textColor="@android:color/white"
                    />
            </LinearLayout>




        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_450"
            android:padding="@dimen/padding_20"
            android:paddingLeft="@dimen/paddingLeft_10"
            android:layout_alignParentBottom="true"
            android:background="@drawable/background_fl_register"
            android:paddingRight="@dimen/paddingLeft_10"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/wallets"
                android:textSize="@dimen/textsize_25"
                android:textColor="@android:color/black"
                android:fontFamily="@font/robotoslab_bold"
                />


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvReceipt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"

                    />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/marginTop_20"
                android:background="@drawable/background_bottom_color_gray"
                android:orientation="horizontal"
                android:padding="@dimen/padding_10"
                android:paddingLeft="@dimen/paddingLeft_20">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/background__pink_color_icon"
                    android:gravity="center"
                    android:padding="@dimen/padding_10">

                    <ImageView
                        android:id="@+id/ivBasket"
                        android:layout_width="@dimen/icon_size"
                        android:layout_height="@dimen/icon_size"
                        android:src="@drawable/ic_dd_arrow" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_left_20"
                        android:text="@string/display_statistic"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/textSize_18" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_left_20"
                        android:layout_marginTop="@dimen/marginTop_10"
                        android:text="@string/bek_mic_organization"
                        android:textSize="@dimen/textSize_15" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/background_bottom_color_gray"
                android:padding="@dimen/padding_10"
                android:layout_marginTop="@dimen/marginTop_10"
                android:paddingLeft="@dimen/paddingLeft_20"
                >
                <ImageView
                    android:layout_width="@dimen/icon_size"
                    android:layout_height="@dimen/icon_size"
                    android:src="@drawable/frequency"
                    android:layout_marginLeft="@dimen/margin_left_10"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_left_20"
                    android:text="@string/display_statistic"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/textSize_18"
                    />
            </LinearLayout>



        </LinearLayout>

    </RelativeLayout>

</LinearLayout>