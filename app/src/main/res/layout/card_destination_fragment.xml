<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".fragments.Intro1">

    <LinearLayout
        android:id="@+id/llRegisterTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_20"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivClose"
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"
                android:src="@drawable/ic_back"
                android:background="@drawable/background_icon"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/padding_5"
                android:layout_alignParentEnd="true"
                android:background="@drawable/background_color_icon"
                >
                <ImageView
                    android:id="@+id/ivBasket"
                    android:layout_width="@dimen/icon_size"
                    android:layout_height="@dimen/icon_size"
                    android:src="@drawable/noti_noti" />
            </LinearLayout>


        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/source_of_fund"
            android:textColor="@android:color/black"
            android:textSize="@dimen/textsize_25"
            android:layout_marginTop="@dimen/marginTop_30"
            android:fontFamily="@font/robotoslab_bold"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_color_bottom"
            android:layout_marginTop="@dimen/marginTop_20"
            >
            <LinearLayout
                android:id="@+id/llVisa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/padding_20"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/johnsayah_annacard"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/textSize_15"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_2704"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/textSize_15"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_09_20"
                    android:layout_marginTop="@dimen/marginTop_10"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/textSize_15"
                    />
            </LinearLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_toEndOf="@id/llVisa"
                android:padding="@dimen/padding_15"
                >
                <ImageView
                    android:id="@+id/ivVisaRight"
                    android:layout_width="@dimen/icon_small_size"
                    android:layout_height="@dimen/icon_small_size"
                    android:src="@drawable/ic_right"
                    android:layout_alignParentEnd="true"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/visa"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/textSize_20"
                    android:fontFamily="@font/robotoslab_bold"
                    android:layout_below="@id/ivVisaRight"
                    android:layout_marginTop="@dimen/marginTop_20"
                    android:layout_alignParentEnd="true"
                    />
            </RelativeLayout>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/background_bottom_color_gray"
            android:padding="@dimen/padding_10"
            android:layout_marginTop="@dimen/marginTop_10"
            android:paddingLeft="@dimen/paddingLeft_20"
            >
            <ImageView
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"
                android:src="@drawable/add_orange"
                android:layout_marginLeft="@dimen/margin_left_10"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_left_20"
                android:text="@string/add_credit_card"
                android:textColor="@android:color/black"
                android:textSize="@dimen/textSize_18"
                />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_20"
        >
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_color_bottom"
            android:layout_marginTop="@dimen/marginTop_20"
            android:text="@string/label"
            android:textColor="@android:color/white"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>








</LinearLayout>