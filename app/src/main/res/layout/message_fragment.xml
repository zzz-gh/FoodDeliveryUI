<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    tools:context=".fragments.MessageFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_15"
        >
        <LinearLayout
            android:id="@+id/llBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_icon"
            android:padding="@dimen/padding_5">

            <ImageView
                android:id="@+id/ivClose"
                android:layout_width="@dimen/icon_small_size"
                android:layout_height="@dimen/icon_small_size"
                android:src="@drawable/ic_back" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/llBack"
            android:layout_toStartOf="@id/llPhone"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSize_18"
                android:textColor="@android:color/white"
                android:text="@string/dean_jones"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_12"
                android:textColor="@android:color/darker_gray"
                android:text="@string/code_a1101"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/llPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:background="@drawable/background_bottom_color_white"
            android:padding="@dimen/padding_10"
            >
            <ImageView
                android:layout_width="@dimen/icon_small_size"
                android:layout_height="@dimen/icon_small_size"
                android:src="@drawable/ic_baseline_phone_24"
                />
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/background_fl_register_white_gray"
        android:layout_marginTop="@dimen/marginTop_30"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/padding_20"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/today"
                    android:textColor="@color/orange_medium"
                    />
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/marginTop_20"
                >
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ivSpkOne"
                    android:layout_width="@dimen/dimen_35"
                    android:layout_height="@dimen/dimen_35"
                    android:src="@drawable/lady"
                    android:scaleType="centerCrop"
                    tools:ignore="MissingConstraints" />
                <LinearLayout
                    android:id="@+id/llMsgOne"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginRight="@dimen/margin_right_50"
                    android:layout_toEndOf="@id/ivSpkOne"
                    android:layout_marginLeft="@dimen/margin_left_20"
                    android:background="@drawable/background_bottom"
                    android:padding="@dimen/padding_15"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/hello_may_i_ask_some"
                        android:textSize="@dimen/text_size_16"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/questions_to_you"
                        android:textSize="@dimen/text_size_16"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/_06_21_am"
                        android:layout_gravity="end"
                        android:textColor="@android:color/darker_gray"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/llMsgTwo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginRight="@dimen/margin_right_50"
                    android:layout_below="@id/llMsgOne"
                    android:layout_marginTop="@dimen/marginTop_10"
                    android:layout_toEndOf="@id/ivSpkOne"
                    android:layout_marginLeft="@dimen/margin_left_20"
                    android:background="@drawable/background_bottom"
                    android:padding="@dimen/padding_15"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/are_you_happy_with"
                        android:textSize="@dimen/text_size_16"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/my_delivery_services"
                        android:textSize="@dimen/text_size_16"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/_06_24_am"
                        android:layout_gravity="end"
                        android:textColor="@android:color/darker_gray"/>
                </LinearLayout>
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ivSpkTwo"
                    android:layout_width="@dimen/dimen_35"
                    android:layout_height="@dimen/dimen_35"
                    android:src="@drawable/profile_spk"
                    android:scaleType="centerCrop"
                    android:layout_below="@id/llMsgTwo"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="@dimen/marginTop_20"
                    android:layout_marginRight="@dimen/marginRight_10"
                    />
                <LinearLayout
                    android:id="@+id/llMsgThree"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginRight="@dimen/margin_right_20"
                    android:layout_below="@id/llMsgTwo"
                    android:layout_marginTop="@dimen/marginTop_20"
                    android:layout_toStartOf="@id/ivSpkTwo"
                    android:layout_marginLeft="@dimen/marginLeft_40"
                    android:background="@drawable/background_color_bottom"
                    android:padding="@dimen/padding_15"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sure_i_m_happy"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/text_size_16"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/_09_27_am"
                        android:layout_gravity="end"
                        android:textColor="@android:color/white"/>
                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_100"
            android:layout_alignParentBottom="true"
            android:background="@drawable/background_fl_register"
            android:padding="@dimen/padding_20"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/ttTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Type something text"
                android:textColor="@android:color/darker_gray"/>
            <ImageView
                android:layout_width="@dimen/icon_small_size"
                android:layout_height="@dimen/icon_small_size"
                android:src="@drawable/ic_pen"
                android:layout_toEndOf="@id/ttTv"
                android:layout_marginLeft="@dimen/margin_left_20"/>

            <ImageView
                android:layout_width="@dimen/icon_small_size"
                android:layout_height="@dimen/icon_small_size"
                android:src="@drawable/ic_baseline_computer_24"
                android:layout_toStartOf="@id/ivGPS"
                android:layout_marginRight="@dimen/marginRight_10"
                android:layout_marginTop="@dimen/marginTop_1"
                />
            <ImageView
                android:id="@+id/ivGPS"
                android:layout_width="@dimen/icon_small_size"
                android:layout_height="@dimen/icon_small_size"
                android:src="@drawable/ic_locate"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
    </RelativeLayout>



</LinearLayout>