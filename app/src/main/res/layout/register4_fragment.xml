<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    tools:context=".fragments.Intro1">

    <LinearLayout
        android:id="@+id/llRegisterTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_15"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/ivClose"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:src="@drawable/ic_back"
            android:background="@drawable/background_icon"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="skip"
            android:textSize="@dimen/textSize_15"
            android:textColor="@android:color/white"
            />
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/marginTop_120"
        android:background="@drawable/background_fl_register"
        android:paddingLeft="@dimen/paddingLeft_20"
        android:paddingRight="@dimen/paddingRight_20"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tvRegisterPh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/register_phone"
            android:textColor="@android:color/black"
            android:textSize="@dimen/textSize_20"
            android:layout_marginTop="@dimen/marginTop_20"
            android:fontFamily="@font/robotoslab_bold"
            />
        <TextView
            android:id="@+id/tvText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvRegisterPh"
            android:text="@string/enter_your_mobile_number_to_enable_2_step_verification"
            android:textColor="@android:color/black"
            android:textSize="@dimen/textSize_15"
            android:fontFamily="@font/roboto_regular"
            />
        <LinearLayout
            android:id="@+id/llPhoneNoInput"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:layout_below="@id/tvText"
            android:background="@drawable/background_layout"
            android:layout_marginTop="@dimen/marginTop_20"
            android:weightSum="10"
            android:gravity="center"
            >
            <com.hbb20.CountryCodePicker
                android:id="@+id/ccp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="4"
                />
            <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:hint="@string/phone_number"
                android:layout_gravity="center"
                android:textSize="@dimen/textSize_15"
                android:layout_weight="6"
                android:textColorHint="@android:color/black"
                />
        </LinearLayout>


        <Button
            android:id="@+id/btnContinueR4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_color_bottom"
            android:layout_marginTop="@dimen/marginTop_20"
            android:layout_alignParentBottom="true"
            android:text="@string/continue_text"
            android:layout_marginBottom="@dimen/marginBottom_20"
            android:textColor="@android:color/white"
            />


    </RelativeLayout>


</FrameLayout>