<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    tools:context=".fragments.Intro1">

    <RelativeLayout
        android:id="@+id/llRegisterTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_15"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/ivClose"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:src="@drawable/ic_back"
            android:background="@drawable/background_icon"
            />
        <ImageView
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:src="@drawable/ic_close_orange"
            android:layout_alignParentEnd="true"
            />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/marginTop_120"
        android:background="@drawable/background_fl_register"
        android:paddingLeft="@dimen/paddingLeft_20"
        android:paddingRight="@dimen/paddingRight_20"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tvRegisterPh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/phone_verification"
            android:textColor="@android:color/black"
            android:textSize="@dimen/textSize_20"
            android:layout_marginTop="@dimen/marginTop_20"
            android:fontFamily="@font/robotoslab_bold"
            />

        <LinearLayout
            android:id="@+id/llSomething"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/tvRegisterPh"
            >
            <ImageView
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"
                android:src="@drawable/ic_otp"
                />
            <TextView
                android:id="@+id/tvText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_left_20"
                android:text="@string/enter_your_otp_code_here"
                android:textColor="@android:color/black"
                android:textSize="@dimen/textSize_15"
                android:fontFamily="@font/roboto_regular"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/marginTop_20"
            android:gravity="center"
            android:layout_below="@id/llSomething"
            >
            <EditText
                android:id="@+id/inputCode1"
                android:layout_width="@dimen/otp_size"
                android:layout_height="@dimen/otp_size"
                android:background="@drawable/background_stroke_design"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:textSize="@dimen/textSize_15"
                />
            <EditText
                android:id="@+id/inputCode2"
                android:layout_width="@dimen/otp_size"
                android:layout_height="@dimen/otp_size"
                android:background="@drawable/background_stroke_design"
                android:gravity="center"
                android:layout_marginLeft="@dimen/margin_left_20"
                android:textColor="@android:color/black"
                android:textSize="@dimen/textSize_15"
                />
            <EditText
                android:id="@+id/inputCode3"
                android:layout_width="@dimen/otp_size"
                android:layout_height="@dimen/otp_size"
                android:background="@drawable/background_stroke_design"
                android:gravity="center"
                android:layout_marginLeft="@dimen/margin_left_20"
                android:textColor="@android:color/black"
                android:textSize="@dimen/textSize_15"
                />

            <EditText
                android:id="@+id/inputCode4"
                android:layout_width="@dimen/otp_size"
                android:layout_height="@dimen/otp_size"
                android:background="@drawable/background_stroke_design"
                android:gravity="center"
                android:layout_marginLeft="@dimen/margin_left_20"
                android:textColor="@android:color/black"
                android:textSize="@dimen/textSize_15"
                />

        </LinearLayout>


        <Button
            android:id="@+id/btnContinueR5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_color_bottom"
            android:layout_marginTop="@dimen/marginTop_20"
            android:layout_alignParentBottom="true"
            android:text="@string/continue_text"
            android:layout_marginBottom="@dimen/marginBottom_20"
            android:textColor="@android:color/white"
            />


    </RelativeLayout>


</FrameLayout>